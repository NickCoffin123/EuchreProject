<Border x:Class="EuchreGroupProject.Deck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:EuchreGroupProject"
        mc:Ignorable="d" 
        d:DesignHeight="346" d:DesignWidth="250"
        Height="300"
        Width="210">
    <!-- specifies RenderTransform = TranslateTransform for animation -->
    <Border.RenderTransform>
        <TranslateTransform/>
    </Border.RenderTransform>
    <!-- A deck's UI simply contains every card in it's stack, with the addition of a single containr for top card as to avoid UI bugs -->
    <Grid x:Name="DeckContainer"/>
</Border>
