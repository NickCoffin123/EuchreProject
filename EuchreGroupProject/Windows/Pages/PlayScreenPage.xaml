<Page x:Class="EuchreGroupProject.Windows.Pages.PlayScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EuchreGroupProject.Windows.Pages"
      xmlns:main="clr-namespace:EuchreGroupProject"
      xmlns:components="clr-namespace:EuchreGroupProject.Windows.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayScreenPage">

    <Grid>
        <!-- Layer 1: Main Game UI -->
        <Grid Background="#344E41">
            <!-- Viewbox used for play area, allows for auto relative scaling based on container size. -->
            <Viewbox>
                <Grid x:Name="PlayArea"
                      Width="2000">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="500"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="DeckAreaContainer"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top">
                    </Grid>

                    <!-- Top hand -->
                    <StackPanel Grid.Row="0"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,40"
                                Height="236"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Grid x:Name="TopHandContainer">
                        </Grid>
                        <Grid x:Name="TopHandStatCardContainer">
                        </Grid>
                    </StackPanel>
                    <!-- Trick/Deck area -->
                    <Grid x:Name="TrickContainer"
                          Grid.Row="1"
                          Height="380"
                          Width="210">
                    </Grid>

                    <components:SuitDisplay x:Name="TrumpDisplay"
                                            Grid.Row="2"/>

                    <!-- Bottom hand -->
                    <StackPanel Grid.Row="2"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,40"
                                Height="236"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Grid x:Name="BottomHandStatCardContainer">
                        </Grid>
                        <Grid x:Name="BottomHandContainer">
                        </Grid>
                    </StackPanel>
                </Grid>
            </Viewbox>
        </Grid>

        <!-- Layer 2: Player dialogs (separate layer because viewbox is getting cramped.) -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:Name="TopHandDialogContainer"
                  Margin="0,50,0,0"
                  Height="50">
            </Grid>
            <Grid Grid.Row="1"
                  x:Name="BottomHandDialogContainer"
                  Margin="0,0,0,90"
                  Height="50">
            </Grid>
        </Grid>
        
        
        
        <!-- Layer 3: Pause Button -->
        <Button Content="Options" 
                Width="180" Height="50"
                FontSize="16"
                Cursor="Hand"
                Margin="0,10,10,0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Click="OptionsButton_Click"
                Style="{StaticResource GenericEuchreButtonStyle}">
        </Button>
    </Grid>
</Page>
