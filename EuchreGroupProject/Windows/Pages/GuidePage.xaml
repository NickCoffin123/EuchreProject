<Page x:Class="EuchreGroupProject.Windows.Pages.GuidePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EuchreGroupProject.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuidePage"
      Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2"
                Style="{StaticResource GenericEuchreButtonStyle}"
                Width="200"
                Content="Back"
                x:Name="BackButton"
                Click="BackButton_Click"
                Height="50"
                Margin="0,0,0,15">
            
        </Button>
        <TextBlock Text="2 Hand Euchre - User Guide"
                   x:Name="UserGuideTitle"
                   Style="{StaticResource EuchreFont}"
                   FontSize="32"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextDecorations="Underline"/>
        <ScrollViewer Grid.Row="1"
              Padding="20">
            <Border BorderBrush="LightBlue"
                    BorderThickness="1"
                    Padding="5"
                    CornerRadius="10"
                    Background="#588157">
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="18"
                       Text="Getting Started"
                       TextWrapping="WrapWithOverflow"
                       TextDecorations="Underline"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="Welcome to the Euchre Game! This guide will help you understand how to use the application, navigate the interface, and play a full game of Euchre. Whether you're new to Euchre or just need a refresher, we've got you covered."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="Requirements"
                       TextWrapping="WrapWithOverflow"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	A modern desktop or laptop"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Euchre Game application installed (Windows)"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="18"
                       Text="User Interface Overview"
                       TextWrapping="WrapWithOverflow"
                       TextDecorations="Underline"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="Main Menu"
                       TextWrapping="WrapWithOverflow"
                       Margin="0,10,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="When you launch the app, you'll see the main menu:"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Start Game – Begins a new 2-player Euchre match."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Continue Game – Opens selection panel of games in progress."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Statistics – A page for viewing game statistics."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Exit – Closes the application."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="Game Screen"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Player Hands – Each player sees their 5 cards."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Trump Suit Offer – A Control for Trump bidding."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Trump Suit Display – Shows the current trump suit."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Scoreboard – Displays the current score."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Trick Area – Displays cards played during the current trick."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="18"
                       Text="How to Play"
                       TextWrapping="WrapWithOverflow"
                       TextDecorations="Underline"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="Objective"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="Be the first team to reach 10 points by winning tricks during rounds."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="Game Flow"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="1.	Dealing"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	Each player is dealt 5 cards."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	One card is turned face-up from the remaining deck."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="2.	Calling Trump"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	In clockwise order, players can accept or pass the up-card's suit as trump."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	If everyone passes, a second round of trump selection begins (players can name any suit except the up-card's suit)."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="3.	Playing Tricks"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	The player to the left of the dealer leads the first card."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	Players must follow suit if possible. If they cannot, they may play any card."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	The highest card in the suit led wins the trick, unless a trump card is played."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="4.	Scoring"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	If the team that called trump wins 3 or 4 tricks, they get 1 point."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	If they win all 5 tricks ('a march'), they get 2 points."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	If the opposing team wins 3 or more tricks, they get 2 points ('euchred')."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   o	If a player goes alone and wins all 5 tricks, they score 4 points."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="18"
                       Text="Understanding the Bowers (Highest Cards in Trump)"
                       TextWrapping="WrapWithOverflow"
                       TextDecorations="Underline"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="In Euchre, when a trump suit is chosen, two special cards become the strongest cards in the game—these are called the Right Bower and the Left Bower."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="The Right Bower"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	This is the Jack of the trump suit."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	It is the highest-ranking card in the game for that round."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Example: If Spades is the trump suit, the Jack of Spades is the Right Bower."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,5"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="The Left Bower"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	This is the Jack of the same color as the trump suit, but from the other suit."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	It is the second-highest card in the trump suit—even though it technically belongs to another suit."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Example: If Spades is trump, the Jack of Clubs (same color, black) becomes the Left Bower."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="Even though the Left Bower is originally a Club, it counts as a Spade during that round and should be played as such."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="14"
                       Text="Trump Card Ranking (Highest to Lowest)"
                       TextWrapping="WrapWithOverflow"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="If Hearts is trump, the cards rank like this:"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="1.	Jack of Hearts (Right Bower)"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="2.	Jack of Diamonds (Left Bower)"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="3.	Ace of Hearts"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="4.	King of Hearts"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="5.	Queen of Hearts"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="6.	10 of Hearts"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="7.	9 of Hearts"
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>

                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="18"
                       Text="Features"
                       TextWrapping="WrapWithOverflow"
                       TextDecorations="Underline"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	2-Player Mode: Play against an AI opponent."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Saves: Save game states to continue a game at a later time."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource EuchreFont}"
                       FontSize="12"
                       Text="   •	Real-Time Feedback: Card validity; you can not play an illegal move."
                       TextWrapping="WrapWithOverflow"
                       FontWeight="Medium"
                       Margin="0,0,0,0"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
