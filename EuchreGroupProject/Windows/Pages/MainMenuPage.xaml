<Page x:Class="EuchreGroupProject.Windows.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EuchreGroupProject.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage"
      Background="Transparent">

    <Page.Resources>
        <DropShadowEffect x:Key="GlowEffect"
                          Color="Black"
                          BlurRadius="8"
                          ShadowDepth="0"/>
    </Page.Resources>

    <Grid>
        <Border>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Welcome to Euchre!" 
                  FontSize="36"
                  FontWeight="Bold"
                  Foreground="#DAD7CD"
                  HorizontalAlignment="Center" 
                  Margin="0,20,0,40"
                  Effect="{DynamicResource GlowEffect}"/>

                <Button Content="Start Game"
                       Width="180" Height="50"
                       FontSize="16" FontWeight="Bold"
                       BorderThickness="2"
                       Cursor="Hand"
                       Margin="0,10,0,0"
                       Click="StartGame_Click"
                        Style="{StaticResource GenericEuchreButtonStyle}">
                </Button>

                <Button Content="Continue Game"
                   Width="180" Height="50"
                   FontSize="16" FontWeight="Bold"
                   BorderThickness="2"
                   Cursor="Hand"
                   Margin="0,10,0,0"
                   Click="ContinueGame_Click"
                   Style="{StaticResource GenericEuchreButtonStyle}">
                </Button>

                <Button Content="Guide"
                        Width="180" Height="50"
                        FontSize="16" FontWeight="Bold"
                        BorderThickness="2"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Style="{StaticResource GenericEuchreButtonStyle}"
                        x:Name="GuideButton"
                        Click="GuideButton_Click">
                  
                </Button>

                <Button Content="Exit"
                       Width="180" Height="50"
                       FontSize="16" FontWeight="Bold"
                       BorderThickness="2"
                       Cursor="Hand"
                       Margin="0,10,0,0"
                       Click="ExitGame_Click"
                        Style="{StaticResource GenericEuchreButtonStyle}">
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
