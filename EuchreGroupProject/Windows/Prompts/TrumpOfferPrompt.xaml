<Window x:Class="EuchreGroupProject.Windows.Pages.TrumpOfferPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:components="clr-namespace:EuchreGroupProject.Windows.Components"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="TrumpOffer"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="700">
    <Grid Margin="0,50,0,0"
          Background="#AA000000">
        <!-- Layer 1: Main Game UI -->
        <Grid>
            <!-- Viewbox used for offer area, allows for auto relative scaling based on container size. -->
            <Viewbox>
                <Grid x:Name="OfferArea"
                        Width="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="500"/>
                    </Grid.RowDefinitions>
                    <!-- Offer -->
                    <Grid Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="65"/>
                            </Grid.RowDefinitions>
                            <!-- Prompt -->
                            <TextBlock Text="Player, would you like to choose this trump?"
                                       Style="{StaticResource EuchreFont}"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextWrapping="WrapWithOverflow"
                                       TextAlignment="Center"
                                       Effect="{StaticResource GlowEffect}"
                                       x:Name="Header"/>

                            <!-- Offer Card -->
                            <Grid Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  x:Name="CardOfferContainer"/>
                            <!-- Offer Button -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Height="50">
                                <Button x:Name="ShowHandButton"
                                        Content="Show Hand"
                                        Style="{StaticResource GenericEuchreButtonStyle}"
                                        Margin="0,0,5,0"
                                        Width="125"
                                        Click="ShowHandButton_Click"/>

                                <Button x:Name="PassButton"
                                        Content="Pass"
                                        Style="{StaticResource GenericEuchreButtonStyle}"
                                        Margin="5,0,5,0"
                                        Width="125"
                                        Click="PassButton_Click"/>
                                <Button x:Name="OrderUpButton"
                                        Content="Order it up!"
                                        Style="{StaticResource GenericEuchreButtonStyle}"
                                        Margin="5,0,0,0"
                                        Width="125"
                                        Click="OrderUpButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
