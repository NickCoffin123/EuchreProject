<Window x:Class="EuchreGroupProject.Windows.Pages.AnyTrumpOfferPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:components="clr-namespace:EuchreGroupProject.Windows.Components"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="TrumpOffer"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <!-- Layer 1: Main Game UI -->
        <Grid Background="#AA000000"
              Height="600">
            <!-- Viewbox used for offer area, allows for auto relative scaling based on container size. -->
            <Viewbox>
                <Grid x:Name="OfferArea"
                        Width="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="500"/>
                    </Grid.RowDefinitions>
                    <!-- Offer -->
                    <Grid Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Choose from any of the trumps below..."
                                       Style="{StaticResource EuchreFont}"
                                       FontSize="32"
                                       HorizontalAlignment="Center"
                                       Margin="0,50,0,0"
                                       TextWrapping="WrapWithOverflow"
                                       TextAlignment="Center"
                                       x:Name="PromptText"/>
                            <!-- Offers -->
                            <Grid Grid.Row="1"
                                  Background="AliceBlue">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="ClubsContainer"
                                        BorderBrush="Green"
                                        Background="LightGreen"
                                        BorderThickness="2"
                                        CornerRadius="10"
                                        Margin="5"
                                        MouseLeftButtonDown="ClubsContainer_MouseLeftButtonDown">
                                    <Image Source="pack://application:,,,/Resources/Suits/Clubs.png"/>
                                </Border>
                                <Border x:Name="DiamondsContainer"
                                        BorderBrush="Green"
                                        Background="LightGreen"
                                        BorderThickness="2"
                                        CornerRadius="10"
                                        Margin="5"
                                        Grid.Column="1"
                                        MouseLeftButtonDown="DiamondsContainer_MouseLeftButtonDown">
                                    <Image Source="pack://application:,,,/Resources/Suits/Diamonds.png"/>
                                </Border>
                                <Border x:Name="HeartsContainer"
                                       BorderBrush="Green"
                                       Background="LightGreen"
                                       BorderThickness="2"
                                       CornerRadius="10"
                                       Margin="5"
                                        Grid.Column="2"
                                        MouseLeftButtonDown="HeartsContainer_MouseLeftButtonDown">
                                    <Image Source="pack://application:,,,/Resources/Suits/Hearts.png"/>
                                </Border>
                                <Border x:Name="SpadesContainer"
                                       BorderBrush="Green"
                                       Background="LightGreen"
                                       BorderThickness="2"
                                       CornerRadius="10"
                                       Margin="5"
                                        Grid.Column="3"
                                        MouseLeftButtonDown="SpadesContainer_MouseLeftButtonDown">
                                    <Image Source="pack://application:,,,/Resources/Suits/Spades.png"/>
                                </Border>
                            </Grid>
                            
                            
                            <!-- Offer Button -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Height="50">
                                <Button x:Name="ShowCardsButton"
                                        Content="Show Hand"
                                        Style="{StaticResource GenericEuchreButtonStyle}"
                                        Margin="0,0,5,0"
                                        Width="125"
                                        Click="ShowCardsButton_Click"/>
                                <Button x:Name="PassButton"
                                        Content="Pass"
                                        Style="{StaticResource GenericEuchreButtonStyle}"
                                        Margin="0,0,5,0"
                                        Width="125"
                                        Click="PassButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
