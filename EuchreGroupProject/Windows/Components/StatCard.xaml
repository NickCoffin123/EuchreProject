<Border x:Class="EuchreGroupProject.Windows.Components.StatCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:EuchreGroupProject.Windows.Components"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800" 
        x:Name="BottomHandStatCard"
        BorderBrush="#DAD7CD"
        BorderThickness="3"
        CornerRadius="10"
        Padding="10"
        Width="325">
    <Grid Width="275">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="John Doe"
                   Style="{StaticResource EuchreFont}"
                   FontSize="24"
                   TextDecorations="Underline"
                   Effect="{StaticResource GlowEffect}"
                   x:Name="NameDisplay"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Current hand score: 0"
                       Style="{StaticResource EuchreFont}"
                       x:Name="CurrentHandScoreDisplay"/>
            <TextBlock Text="Current hand tricks won: 0"
                       Style="{StaticResource EuchreFont}"
                       x:Name="CurrentHandTricksWonDisplay"/>
            <TextBlock Text="Total tricks won: 0"
                       Margin="0,15,0,0"
                       Style="{StaticResource EuchreFont}"
                       x:Name="TotalTricksWonDisplay"/>
            <TextBlock Text="Total hands won: 0"
                       Style="{StaticResource EuchreFont}"
                       x:Name="TotalHandsWonDisplay"/>
        </StackPanel>
        <Button Style="{StaticResource GenericEuchreButtonStyle}"
                Grid.Row="2"
                Content="Show Cards"
                x:Name="ShowCardsButton"
                Click="ShowCardsButton_Click"/>
    </Grid>
</Border>
