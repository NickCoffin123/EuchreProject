<!-- A textbox with the addition of a placeholder property -->
<Border x:Class="EuchreGroupProject.Windows.Components.BetterTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:EuchreGroupProject.Windows.Components"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="TextInput"
                 TextChanged="TextInput_TextChanged"
                 Background="Transparent"
                 BorderThickness="0"
                 Panel.ZIndex="2"/>
        <TextBlock x:Name="TextPlaceholder"/>
    </Grid>
</Border>
