<Border x:Class="EuchreGroupProject.Windows.Components.SuitDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EuchreGroupProject.Windows.Components"
             mc:Ignorable="d"
             Padding="10"
             BorderBrush="AliceBlue"
             BorderThickness="2"
             CornerRadius="10"
             HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             Margin="0,0,50,40">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Current Trump:"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Style="{StaticResource EuchreFont}"
                   FontSize="32"
                   Effect="{StaticResource GlowEffect}"/>
        <Grid>
            <TextBlock Text="Trump Phase In Progress..."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Style="{StaticResource EuchreFont}"
                       FontSize="16"
                       Effect="{StaticResource GlowEffect}"
                       Margin="0,0,0,15"
                       x:Name="NoTrumpDisplay"
                       Visibility="Hidden"/>
            <Image x:Name="SuitImageDisplay"
                   Height="100"
                   Visibility="Hidden">
            </Image>
        </Grid>
    </StackPanel>
</Border>
