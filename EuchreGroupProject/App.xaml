<Application x:Class="EuchreGroupProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EuchreGroupProject"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <!-- General effects -->
        <DropShadowEffect x:Key="GlowEffect"
                          Color="Black"
                          BlurRadius="8"
                          ShadowDepth="0"/>
        
        <!-- Font styles -->
        <Style x:Key="EuchreFont" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#DAD7CD"/>
        </Style>
        <Style x:Key="EuchreFontDark" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F1F1F"/>
        </Style>

        <Style x:Key="EuchreFontTextBox" TargetType="TextBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#DAD7CD"/>
        </Style>
        <Style x:Key="EuchreFontDarkTextBox" TargetType="TextBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F1F1F"/>
        </Style>

        <Style x:Key="EuchreFontRadioButton" TargetType="RadioButton">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#DAD7CD"/>
        </Style>



        <!-- Button styles -->
        <Style x:Key="GenericEuchreButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#588157"/>
            <Setter Property="Foreground" Value="#DAD7CD"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#DAD7CD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#344E41"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#283D31"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelEuchreButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#588157"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#344E41"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#283D31"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
